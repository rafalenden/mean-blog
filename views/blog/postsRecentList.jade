section(ng-controller="BlogRecentListCtrl").block
  h2.block-title Recent blog posts

  article.blog-post-teaser(ng-repeat="post in posts")
    h3.blog-post-teaser-title: a(ng-href="/blog/{{post.slug}}") {{post.title}}
    p
      i.fa.fa-calendar
      |  Posted on {{post.createdAt | date:'mediumDate'}}
    .blog-post-teaser-body(markdown="{{post.teaser}}")

  a(href="/blog") See more
    span.glyphicon.glyphicon-chevron-right
